{% comment %} Gift Guide â€“ Banner (no Dawn defaults) {% endcomment %}
<section class="gg-banner">
  <div class="gg-banner__bg" {% if section.settings.bg_image != blank %}style="background-image:url({{ section.settings.bg_image | image_url: width: 2400 }});" {% endif %}></div>

  <div class="gg-banner__inner container">
    {% if section.settings.kicker != blank %}
      <p class="gg-banner__kicker">{{ section.settings.kicker }}</p>
    {% endif %}
    <h1 class="gg-banner__title">{{ section.settings.heading }}</h1>
    {% if section.settings.subheading != blank %}
      <p class="gg-banner__sub">{{ section.settings.subheading }}</p>
    {% endif %}

    <div class="gg-banner__cta">
      {% if section.settings.cta_1_label != blank %}
        <a class="gg-btn gg-btn--primary" href="{{ section.settings.cta_1_url }}">{{ section.settings.cta_1_label }}</a>
      {% endif %}
      {% if section.settings.cta_2_label != blank %}
        <a class="gg-btn gg-btn--ghost" href="{{ section.settings.cta_2_url }}">{{ section.settings.cta_2_label }}</a>
      {% endif %}
    </div>
    {% if section.settings.note != blank %}
      <p class="gg-banner__note">{{ section.settings.note }}</p>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Gift Guide Banner",
  "tag": "section",
  "settings": [
    { "type": "image_picker", "id": "bg_image", "label": "Background image" },
    { "type": "text", "id": "kicker", "label": "Kicker (small line)", "default": "TISSO VISION" },
    { "type": "text", "id": "heading", "label": "Main heading", "default": "The Gift Guide" },
    { "type": "textarea", "id": "subheading", "label": "Subheading", "default": "Discover your ultimate holiday gift destination..." },
    { "type": "text", "id": "cta_1_label", "label": "Primary button label", "default": "Shop now" },
    { "type": "url", "id": "cta_1_url", "label": "Primary button link" },
    { "type": "text", "id": "cta_2_label", "label": "Secondary button label", "default": "Discover gift" },
    { "type": "url", "id": "cta_2_url", "label": "Secondary button link" },
    { "type": "text", "id": "note", "label": "Small note under banner", "default": "SUSTAINABLE, ETHICALLY MADE..." }
  ],
  "presets": [{ "name": "Gift Guide Banner" }]
}
{% endschema %}
